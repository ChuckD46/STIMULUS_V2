@inject NavigationManager NavigationManager

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Code Example</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.24.1/themes/prism.min.css" />
</head>
<body>
    <style>
        .code-container {
            background-color: #282c34;
            color: #abb2bf;
            padding: 1rem;
            border-radius: 8px;
            overflow-x: auto;
        }

        .code {
            font-family: 'Courier New', Courier, monospace;
        }
    </style>

    <div class="code-container">
        <h3 class="custom-theory-texte-letter">Composant Code</h3>
        <pre class="code">
        <code>
            // C# code example with comments
            using System;

            class Program
            {
                // Main method
                static void Main()
                {
                    // Writing a message to the console
                    Console.WriteLine("Hello, World!");
                }
            }
        </code>
    </pre>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.24.1/prism.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Prism.highlightAll();
        });
    </script>
</body>
</html>

@code {
    [Parameter] public int composantId { get; set; }

}
