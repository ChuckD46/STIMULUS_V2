@inject NavigationManager NavigationManager
@using STIMULUS_V2.Shared.Interface.ChildInterface;
@using STIMULUS_V2.Shared.Models.Entities;
@inject ICodeService CodeService

@if(code != null)
{
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Code Example</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.24.1/themes/prism.min.css" />
    </head>
    <body>
        <style>
            .code-container {
                background-color: #282c34;
                color: #abb2bf;
                padding: 1rem;
                border-radius: 8px;
                overflow-x: auto;
            }

            .code {
                font-family: 'Courier New', Courier, monospace;
            }
        </style>

        <div class="code-container">
            <pre class="code">
            <code>
                // C# code example with comments
                using System;

                class Program
                {
                    // Main method
                    static void Main()
                    {
                        // Writing a message to the console
                        Console.WriteLine("Hello, World!");
                    }
                }
            </code>
        </pre>
        </div>
    </body>
    </html>
}
else
{
    <p>Chargement...</p>
}

@code {
    [Parameter] public int Reference { get; set; }


    public Code code { get; set; }

    protected async override Task OnInitializedAsync()
    {
        var Code = await CodeService.Get(Reference);
        code = Code.Data;



        await base.OnInitializedAsync();
        StateHasChanged();
    }
}
