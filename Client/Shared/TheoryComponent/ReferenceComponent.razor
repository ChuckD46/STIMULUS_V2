@using STIMULUS_V2.Shared.Interface.ChildInterface;
@using STIMULUS_V2.Shared.Models.Entities;

@inject IReferenceService ReferenceService;

@if (reference != null)
{
    <div>
        <h1 style="font-size: 1.5em;">@((reference.Description != null) ? reference.Description : "")</h1>
        <p>
            <a href="@((reference.Url != null) ? reference.Url : "")" target="_blank">
                @((reference.Url != null) ? "Voir la référence" : "")
            </a>
        </p>
    </div>
}
else
{
    <p>Chargement...</p>
}

@code {
    [Parameter]
    public int Reference { get; set; }

    public Reference reference { get; set; }

    protected async override Task OnInitializedAsync()
    {
        var ReferenceUnit = await ReferenceService.Get(Reference);
        reference = ReferenceUnit.Data;

        await base.OnInitializedAsync();
        StateHasChanged();
    }
}
