@using Microsoft.AspNetCore.Components.Authorization

@inherits LayoutComponentBase

<RadzenComponents />
<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

<AuthorizeView Roles="PROFESSEUR, ETUDIANT, ADMIN">
    <Authorized>
        <RadzenLayout >
            <Header />
            <Menu sidebarExpanded=false />
            <RadzenBody class="custom-padding-body">
                @Body
                <Footer />
            </RadzenBody>
        </RadzenLayout>
    </Authorized>
    <NotAuthorized>
        <RadzenLayout Style="display: flex; justify-content:center; background-image: url('/RessourceVisuel/Fond.png');">
            <LoginComponent />
        </RadzenLayout>
    </NotAuthorized>
</AuthorizeView>

