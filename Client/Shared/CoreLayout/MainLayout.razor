@using Microsoft.AspNetCore.Components.Authorization

@inherits LayoutComponentBase

<RadzenComponents />
<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />

<AuthorizeView Roles="PROFESSEUR, ETUDIANT, ADMIN">
    <Authorized>
        <RadzenLayout >
            <Header />
            <Menu sidebarExpanded=true />
            <RadzenBody class="custom-padding-body">
                @Body
                <Footer />
            </RadzenBody>
        </RadzenLayout>
    </Authorized>
    <NotAuthorized>
        <RadzenLayout Style="display: flex; justify-content:center; padding-top:7%; background: linear-gradient(360deg, hsla(215, 33%, 23%, 1) 5%, hsla(206, 31%, 90%, 1) 100%);">
            <LoginComponent />
        </RadzenLayout>
    </NotAuthorized>
</AuthorizeView>

